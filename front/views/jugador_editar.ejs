<body>

<h1>Editar jugador</h1>

<form method="POST" action="/admin/club/jugadores/editar/<%= jugador.id %>">

    <label>DNI</label><br>
    <input type="text" name="dni" value="<%= jugador.dni %>" required>
    <br><br>

    <label>Nombre</label><br>
    <input type="text" name="nombre" value="<%= jugador.nombre %>" required>
    <br><br>

    <label>Apellido</label><br>
    <input type="text" name="apellido" value="<%= jugador.apellido %>" required>
    <br><br>

    <label>Fecha nacimiento</label><br>
    <input
        type="date"
        name="fecha_nacimiento"
        value="<%= new Date(jugador.fecha_nacimiento).toISOString().split('T')[0] %>"
        required
    >
    <br><br>

    <label>PosiciÃ³n</label><br>
    <input type="text" name="posicion" value="<%= jugador.posicion %>">
    <br><br>

